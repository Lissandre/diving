*
    margin 0
    padding 0

html, body
    position fixed
    top 0
    left 0
    width 100%
    height 100%

canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 0

button
  position absolute
  top 0
  left 0
  z-index 10

#intro
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  background #000
  display flex
  justify-content center
  align-items center
  transition 0.32s linear opacity
  z-index 10

#introSentences
  color #ffffff
  font-size 40px
  font-family sans-serif
  transition 0.8s linear opacity
  opacity 0

#beginButton
  color #ffffff
  font-size 40px
  font-family sans-serif
  border 2px solid #ffffff
  padding 10px 20px
  cursor pointer

#depth
  color #ffffff
  -webkit-text-fill-color: #ffffff; /* Will override color (regardless of order) */
  -webkit-text-stroke-width: 2px;
  -webkit-text-stroke-color: #000000;
  opacity 0.3
  font-size 40px
  position absolute
  bottom 20px
  right 20px
  font-family Arial, "Helvetica Neue", Helvetica, sans-serif
  z-index 5

#pressure
  color #ffffff
  -webkit-text-fill-color: #ffffff; /* Will override color (regardless of order) */
  -webkit-text-stroke-width: 2px;
  -webkit-text-stroke-color: #000000;
  opacity 0.3
  font-size 40px
  position absolute
  bottom 70px
  right 20px
  font-family Arial, "Helvetica Neue", Helvetica, sans-serif
  z-index 5

#screenButton
  background red
  width 40px
  height 40px
  position absolute
  top 20px
  right 20px
  z-index 5
  border-radius 50%
  cursor pointer
  transition transform 0.3s ease
  &:hover
    transform scale(0.95)

#mic
  position absolute
  top 0
  left 0
  z-index 10